{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@guards/*": ["guards/*"],
      "@user/*": ["user/*"],
      "@auth/*": ["auth/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@schemas/*": ["schemas/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@jobs/*": ["jobs/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
